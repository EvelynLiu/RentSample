<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="#ffcccccc"
        android:contentDescription="HOUSE" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listImage"
        android:layout_toRightOf="@+id/listImage" >

        <TextView
            android:id="@+id/listPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8800/月"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/listType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="獨立套房" />

        <TextView
            android:id="@+id/listSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="8坪" />

    </LinearLayout>

    <TextView
        android:id="@+id/listAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/listImage"
        android:maxLines="4"
        android:text="新北市蘆州區中正路158號6樓"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/listMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listImage"
        android:layout_alignLeft="@+id/listAddress"
        android:text="[全新]進捷運站~歡迎約看聯絡" />

</RelativeLayout>